<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.myaddon"
       name="Moje Video Menu"
       version="1.0.0"
       provider-name="Tvoje Meno">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.31.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="sk">Jednoduchý video doplnok s menu a nastaveniami</summary>
        <description lang="sk">Testovací doplnok pre Kodi s menu a podporou requests.</description>
        <platform>all</platform>
    </extension>
</addon>
<addon id="repository.example"
       name="Example Repo"
       version="1.0.0"
       provider-name="Tvoje Meno">
    <extension point="xbmc.addon.repository"
               name="Example Repo"
               info="https://nezo96.github.io/kodi-repo/addons.xml"
               checksum="https://nezo96.github.io/kodi-repo/addons.xml.md5"
               datadir="https://tvoja-adresa/repo/">
        <info compressed="false"/>
        <checksum compressed="false"/>
        <datadir zip="true"/>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Repozitár pre moje Kodi doplnky</summary>
        <description>Repozitár s doplnkom plugin.video.myaddon.</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
